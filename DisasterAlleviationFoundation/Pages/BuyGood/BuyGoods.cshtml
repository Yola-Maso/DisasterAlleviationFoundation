@page
@model DisasterAlleviationFoundation.Pages.BuyGood.BuyGoodsModel

<h4>BuyGoods</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AvailableMoney" class="control-label">Available Money:</label>
                <span class="form-control">@Model.AvailableMoney.ToString("C")</span>
            </div>

            <div class="form-group">
                <label asp-for="BuyGoods.NumOfItems" class="control-label"></label>
                <input asp-for="BuyGoods.NumOfItems" class="form-control" />
                <span asp-validation-for="BuyGoods.NumOfItems" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyGoods.Description" class="control-label"></label>
                <input asp-for="BuyGoods.Description" class="form-control" />
                <span asp-validation-for="BuyGoods.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyGoods.CategoryName" class="control-label"></label>
                <input asp-for="BuyGoods.CategoryName" class="form-control" />
                <span asp-validation-for="BuyGoods.CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BuyGoods.Amount" class="control-label"></label>
                <input asp-for="BuyGoods.Amount" class="form-control" />
                <span asp-validation-for="BuyGoods.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
